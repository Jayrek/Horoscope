<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#000000" />
             <gradient  android:angle="-90"  android:startColor="#fffff2b3" android:centerColor="#ffff681d" android:endColor="#fffff2b3"  />
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#000000" />
             <solid  android:color="#FF0000"/>
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#000000" />
             <gradient  android:angle="-90"  android:startColor="#ffffa12a" android:centerColor="#ffffcc00" android:endColor="#ffffa12a" />
         </shape>
     </item>
</selector>